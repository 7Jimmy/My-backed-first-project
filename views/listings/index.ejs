<% layout('/layouts/boilerplate.ejs') %>

    <body>
        <div class="container mt-4">



            <h3 class="text-center mb-4">All Listings</h3>

            <div class="row g-4">
                <% alllistings.forEach((list, index)=> { %>
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card h-100">
                            <img src="<%= list.image %>" class="card-img-top" alt="<%= list.title %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= list.title %>
                                </h5>
                                <p class="card-text">
                                    <strong>Price:</strong> PKR <%= list.price.toLocaleString("en-PK") %>/night<br>
                                        <strong>Location:</strong>
                                        <%= list.location %><br>
                                            <strong>Country:</strong>
                                            <%= list.country %>
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="/listings/<%= list.id %>/edit" class="btn edit-btn shake-btn:hover">Edit</a>
                                <a href="/listings/<%= list.id %>" class="btn shake-btn:hover">Show Detail</a>
                                <form action="/listings/<%= list.id %>?_method=DELETE" method="post" class="d-inline">
                                    <button class="btn delete-btn">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </body>