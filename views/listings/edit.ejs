<%- layout('/layouts/boilerplate.ejs') %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Edit Your Listing</h3>

   
  <form action="/listings/<%= alllistings._id %>/edit?_method=PATCH" method="POST">
    
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
   
    <input type="text" name="title" value="<%= alllistings.title %>" class="form-control">
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea name="description" class="form-control"><%= alllistings.description %></textarea>
    </div>
   
<div class="mb-3">
  <label for="image" class="form-label">Image Link:</label>
  <input type="text" name="image"  class="form-control">
    </div>
   
    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price:</label>
      <input type="number" name="price" value="<%= alllistings.price %>" class="form-control">
         </div>
  
         <div class="mb-3-md-8">
          <label for="country" class="form-label">Country:</label>
          <input type="text" name="country" value="<%= alllistings.country %>" class="form-control">
         </div>
    </div>
    
   
    <div class="mb-3">
      <label for="location" class="form-label">Location:</label>
    <input type="text" name="location" value="<%= alllistings.location %>" class="form-control">
    </div>
    
  
   

    <button type="submit" class="btn btn-dark add-btn">Update Now</button><br><br>
  </form>
</div>
</div>
</body>


