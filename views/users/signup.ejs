<%- layout('/layouts/boilerplate.ejs') %>

  <body>
    <div class="row mb-6">

      <div class="col-6 offset-3 ">
        <h3>Signup Page</h3>

        <form action="/signup" method="post" novalidate class="needs-validation">
          <div>
            <label for="username" class="form-label">User Name:</label>
            <input type="text" id="username" name="username" class="form-control" required>
            <div class="valid-feedback">User Name looks good!</div>

            <div class="invalid-feedback">Add valid User Name!</div>

          </div>
          <div>
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>


          </div>
          <div>
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" class="form-control" required>


          </div>
          <button class="btn btn-success mt-3  " style="margin-bottom: 17%;">Signup</button><br><br>
        </form>
      </div>
    </div>
  </body>